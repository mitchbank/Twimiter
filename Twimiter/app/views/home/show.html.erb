<h1>Homepage</h1>

<%= render 'form' %>

<% if !current_user.nil? %>
  <p>
    <%= form_for :tweet, url: tweets_path, method: :post do |f| %>
      <%= f.text_field :message %>
      <%= f.submit "Send Tweet" %>
    <% end %>
  </p>
  <% else %>
    <p>You must log in to send a tweet.</p>
<% end %>



<% @tweets.each do |t| %>
  <blockquote class="twitter-tweet">
    <p>
      <b><%= link_to "#{t.user.name} @#{t.user.screen_name}", "http://www.twitter.com/#{t.user.screen_name}", target: "_blank" %></b><br />
      <%= t.text %> -
      <span><%= time_ago_in_words(t.created_at) %> ago</span><br />
       Retweeted: <%= t.retweet_count %> Favorited: <%= t.favorite_count %>
    </p>
  </blockquote>
<% end %>





