<h1>Homepage</h1>

<!-- <%= render 'form' %> -->

<% if !current_user.nil? %>
  <p>
    <%= form_for :tweet, url: tweets_path, method: :post do |f| %>
      <%= f.text_field :message %>
      <%= f.submit "Send Tweet" %>
    <% end %>
  </p>
  <% else %>
    <p>You must log in to send a tweet.</p>
<% end %>
